<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">
    <ImageView
        android:id="@+id/sub_categories_iv"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginTop="7dp"
        />

    <TextView
        android:id="@+id/atta_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:text="@string/atta_other_flours"
        android:textColor="#403f3f"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/sub_categories_iv"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/atta_footer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/atta_other_flours"
        android:textSize="10dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/atta_tv"
        app:layout_constraintLeft_toRightOf="@id/sub_categories_iv"
        android:textColor="#999696"/>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/placeholder_bg"
        app:layout_constraintTop_toBottomOf="@id/sub_categories_iv">

    </View>


</android.support.constraint.ConstraintLayout>