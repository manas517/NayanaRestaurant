<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

        <View
            android:id="@+id/patan_view"
            android:layout_width="250dp"
            android:layout_height="15dp"
            android:background="@drawable/back_bg" />
        <View
            android:id="@+id/patan_view0"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="@dimen/padding_10"
            app:layout_constraintTop_toBottomOf="@id/patan_view"
            android:background="@drawable/back_bg"/>
        <View
            android:id="@+id/patan_view1"
            android:layout_width="90dp"
            android:layout_height="100dp"
           android:layout_marginTop="@dimen/padding_10"
            app:layout_constraintTop_toBottomOf="@id/patan_view0"
            android:layout_marginRight="@dimen/activity_padding"
            android:background="@drawable/back_bg" />
        <View
            android:id="@id/patan_view2"
            android:layout_width="180dp"
            android:layout_height="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/patan_view0"
            app:layout_constraintLeft_toRightOf="@id/patan_view1"
            android:background="@drawable/back_bg">
        </View>
        <View
            android:id="@+id/patan_view3"
            android:layout_width="120dp"
            android:layout_height="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/patan_view2"
            app:layout_constraintLeft_toRightOf="@id/patan_view1"
            android:background="@drawable/back_bg">
        </View>
        <View
            android:id="@+id/patan_view4"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="@dimen/padding_10"
            app:layout_constraintTop_toBottomOf="@id/patan_view1"
            android:background="@drawable/back_bg"/>


</android.support.constraint.ConstraintLayout>